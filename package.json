{
  "name": "reason-logger",
  "version": "0.0.1",
  "description": "My Project",
  "esy": {
    "build": "pesy",
    "buildsInSource": "_build",
    "release": {
      "releasedBinaries": [
        "reasonLogger.exe"
      ]
    }
  },
  "buildDirs": {
    "test": {
      "require": [
        "reason-logger.lib",
        "rely.lib"
      ],
      "main": "RunTests",
      "name": "RunTests.exe",
      "ocamloptFlags": [
        "-linkall",
        "-g"
      ]
    },
    "library": {
      "preprocess": [
        "pps",
        "ppx_deriving",
        "ppx_deriving_yojson"
      ],
      "require": [
        "str",
        "console.lib",
        "parmap",
        "yojson",
        "ppx_deriving.runtime",
        "ppx_deriving_yojson.runtime"
      ],
      "name": "reason-logger.lib",
      "namespace": "ReasonLoggerLib"
    },
    "executable": {
      "require": [
        "reason-logger.lib"
      ],
      "main": "ReasonLogger",
      "name": "reasonLogger.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x RunTests.exe",
    "test-ci": "esy x RunTestsCI",
    "run": "esy x reasonLogger",
    "fmt": "bash -c 'refmt --in-place {library,executable,test}/*.re'"
  },
  "license": "MIT",
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/dune": ">=1.6.0",
    "@opam/parmap": "1.0-rc10",
    "@opam/ppx_deriving": "4.2.1",
    "@opam/ppx_deriving_yojson": "3.3",
    "@opam/yojson": "1.5.0",
    "@reason-native/console": "^0.1.0",
    "@reason-native/rely": "^1.3.1",
    "ocaml": "^4.4.0",
    "refmterr": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*"
  }
}