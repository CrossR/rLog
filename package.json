{
  "name": "rLog",
  "version": "1.0.2",
  "description": "A logging tool for scientific workflows",
  "esy": {
    "build": "pesy",
    "buildsInSource": "_build",
    "release": { "releasedBinaries": [ "rLog.exe" ] }
  },
  "buildDirs": {
    "test": {
      "require": [ "rLog.lib", "rely.lib" ],
      "main": "RunTestsCI",
      "name": "RunTests.exe",
      "ocamloptFlags": [ "-linkall", "-g" ]
    },
    "library": {
      "preprocess": [ "pps", "ppx_deriving", "ppx_deriving_yojson" ],
      "require": [
        "str", "console.lib", "parmap", "yojson", "ppx_deriving.runtime",
        "ppx_deriving_yojson.runtime"
      ],
      "name": "rLog.lib",
      "namespace": "rLogLib"
    },
    "executable": {
      "require": [ "rLog.lib" ],
      "main": "RLog",
      "name": "rLog.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x RunTests.exe",
    "run": "esy x rLog.exe",
    "format": "bash -c 'refmt --in-place {library,executable,test}/*.re*'"
  },
  "license": "MIT",
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/dune": "2.5.0",
    "@opam/dune-configurator": "2.5.1",
    "@opam/dune-private-libs": "2.5.1",
    "@opam/parmap": "1.2",
    "@opam/ppx_deriving": "*",
    "@opam/ppx_deriving_yojson": "*",
    "@opam/yojson": "1.7.0",
    "@reason-native/console": "^0.1.0",
    "@reason-native/rely": "^3.2.1",
    "ocaml": "4.10.0",
    "pesy": "*",
    "refmterr": "*"
  },
  "devDependencies": {
    "ocaml": "4.10.0",
    "@opam/ocaml-lsp-server": "ocaml/ocaml-lsp:ocaml-lsp-server.opam#966a28f"
  }
}
